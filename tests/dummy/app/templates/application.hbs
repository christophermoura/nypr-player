{{#nypr-player-dummy-integration as |integration|}}
    {{#nypr-player
        currentTitle          = integration.currentTitle
        backdropImageUrl      = integration.backdropImageUrl
        onPlay                = integration.onPlay
        onPause               = integration.onPause
    as |content|}}
      {{#content.for 'trackInfo' as |args|}}
        {{integration.storyTitle}}
      {{/content.for}}

      {{#content.for 'streamInfo' as |args|}}
        {{integration.streamName}}
      {{/content.for}}

      {{#content.for 'aux' as |args|}}
        {{args.queueButton
            queueLength           = 0
            showModal             = (action 'showModal')
            closeModal            = (action 'closeModal')
            isOpenModal           = modal}}
      {{/content.for}}
  {{/nypr-player}}
{{/nypr-player-dummy-integration}}
